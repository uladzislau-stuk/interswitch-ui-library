{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "jsx": "react",
        "lib": ["es6"],
        "moduleResolution": "node",
        "noEmit": true,
        "strict": true,
        "target": "esnext",
        "baseUrl": "src",
        "paths": {
            "assets/*": ["./assets/*"],
            "components/*": ["./components/*"],
            "screens/*": ["./screens/*"],
            "hooks/*": ["./hooks/*"],
            "navigation/*": ["./navigation/*"],
            "solutions/*": ["./solutions/*"],
            "styles/*": ["./styles/*"],
            "utils/*": ["./utils/*"]
        }
    },
    "exclude": [
        "node_modules",
        "babel.config.js",
        "metro.config.js",
        "jest.config.js"
    ]
}
